@import 'nib'
@import 'rupture'
@import url('//fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600');

_blue = #0053a1
_azure = #00acf1
_red = #e81f1e

// Rupture media query for PureCSS
rupture.scale = 0 568px 768px 1024px 1280px
rupture.scale-names = 'sm' 'md' 'lg' 'xl' 'hd'

.source-sans-pro
  font-family 'Source Sans Pro', sans-serif!important
  
.pure-g [class *='pure-u']
  @extends .source-sans-pro
.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .source-sans-pro
  button
    @extends .source-sans-pro
button
  @extends .source-sans-pro

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right

_spacer = 5, 10, 20, 30, 40, 60, 80, 100, 150
for _val in _spacer
  .spacer-{ _val }
    height ( _val * 1px )
    clearfix()

a.link
  text-decoration none
  color _blue
  box-shadow inset 0 -2px 0 rgba(_blue, 0.2)
  transition color 0.3s ease, box-shadow 0.3s ease
  display inline-block
  &:hover
    color _azure
    box-shadow inset 0 -2px 0 rgba(_azure, 0.5)


html,
body
  width 100%
  height 100%

body
  @extends .source-sans-pro
  background #FFF
  font-weight 200
  color darken(_blue, 10%)
  position relative
  font-size 13px
  line-height 30px
  
nav
  position fixed
  width 100%
  height 70px
  top 0
  left 0
  overflow hidden
  z-index 10
  background none
  font-size 15px
  transition all 0.5s ease
  .logo-container
    img.logo
      border none
      height 46px
      width 354px
      margin-top 11px
  .menu
    text-align right
    ul
      margin 0
      margin-top 18px
      padding 0
      list-style-type none
      list-style-position outside
      li
        margin 0
        margin-left 20px
        padding 0
        display inline
        font-size 18px
        &:first-child
          margin-left 0
        a
          @extends a.link
          color rgba(#fff, 0.8)
          box-shadow inset 0 -2px 0 rgba(#fff, 0.2)
          font-weight 400
          &:hover
            color rgba(#fff, 1)
            box-shadow inset 0 -2px 0 rgba(#fff, 0.5)
            

  &.fixed
    background #fff
    position fixed
    box-shadow 0 0 5px rgba(#000, 0.35)
    .menu
      ul
        li
          a
            color _blue
            box-shadow inset 0 -2px 0 rgba(_blue, 0.2)
            &:hover
              color _azure

.page
  width 100%
  height auto
  position relative
  background-position center center
  background-repeat no-repeat
  background-size cover
  //background-attachment fixed
  .gradient
    position relative
    width 100%
    height 100%
    background linear-gradient(top, rgba(#000, 0.7) 0%, rgba(#000, 0) 45%)

  &.page-fullscreen
    height 100%
    overflow hidden
    position relative
    
  &.page-almost-fullscreen
    height 80%
    overflow hidden
    position relative
    &.m
      &.l
        &:before
          position absolute
          top -80%
          left -98%
          bottom -80%
          width 100%
          background #fff
          content ''
          transform rotate(20deg)
          z-index 5
      &.r
        &:after
          position absolute
          top -80%
          right -95%
          bottom -80%
          width 100%
          background #fff
          content ''
          transform rotate(20deg)
          z-index 5
    
.container
  width 960px
  margin 0 auto
    
  p
    margin 0
    font-size 20px
    line-height 40px
    b,
    strong
      font-weight 600

.padding
  padding-left 20px
  padding-right 20px

#map
  position absolute
  top 0
  left 0
  width 100%
  height 100%

#logos
  img
    margin 10px auto
    width 120px
    
#contacts
  font-size 16px
  line-height 30px
  .container
    padding-top 20px
    padding-bottom 20px
  ul
    list-style-type none
    margin 0
    padding 0
    li
      padding 0
  h2,
  h4
    margin 0

#latest
  /*display none*/
  a
    @extends a.link
  .single-offer
    margin-bottom 10px
    h3,
    h5
      margin 0
      margin-bottom 5px
      font-weight 400
      line-height 120%
    h3
      font-size 20px
    h5
      font-size 15px
    p
      font-size 14px
      text-align center
      
.square-pics
  position relative
  overflow hidden
  .slide
    width 400px
    height 100%
    position relative
    overflow hidden
    text-align center
    img
      width 100%
      height auto
  .slick-prev
    left 10px
  .slick-next 
    right 10px
  .slick-prev,
  .slick-next
    position absolute
    &:before
      opacity 1
  .slick-dots 
    position absolute
    bottom 10px
    li
      button
        &:before
          color #fff
  &.buildings
    .slide
      width 500px
  
.slick-slider
  margin 0 auto!important
  



//  -- cookie policy --
#cc-notification
  border-bottom none!important
  font-family font-family 'Source Sans Pro', sans-serif!important
#cc-notification h2 span, #cc-notification h2
  font-size 14px!important
#cc-notification a, #cc-notification a:visited
  font-size 12px!important
#cc-notification ul.cc-notification-buttons li a, #cc-notification ul.cc-notification-buttons li a:visited
  background-color #fff!important
  color _blue!important
#cc-notification ul.cc-notification-buttons li a:hover, #cc-notification ul.cc-notification-buttons li a:active, #cc-notification ul.cc-notification-buttons li #cc-approve-button-allsites:hover, #cc-notification ul.cc-notification-buttons li #cc-approve-button-allsites:active
  box-shadow none!important
#cc-notification #cc-notification-permissions li label
  color #fff!important
  font-size 13px!important
#cc-notification #cc-notification-permissions li strong
  color #fff!important
  margin-bottom 10px!important
#cc-notification .cc-logo, #cc-tag .cc-logo, #cc-modal .cc-logo, #cc-settingsmodal .cc-logo, #cc-notification span
  color #fff!important


@media screen and (max-width: 959px)

  .page
    &.page-almost-fullscreen
      height auto
      min-height 300px
  
  .container
    width 100%
      
  #contacts
    text-align center
    
@media screen and (max-width: 767px)

  .to-hide
    display none!important
    
  nav
    height auto
    position relative
    top auto
    left auto
    .logo-container,
    .menu
      text-align center
    .logo-container
      img.logo
        height 30px
        width auto
    .menu
      ul
        margin-top 0
        margin-bottom 20px
        li
          a
            @extends a.link
            color _blue
            box-shadow inset 0 -2px 0 rgba(_blue, 0.2)
            &:hover
              color _azure
              box-shadow inset 0 -2px 0 rgba(_azure, 0.5)
    &.fixed
      position relative
  
  .page
    &.page-fullscreen
      height 200px
      overflow hidden
      
    &.page-almost-fullscreen
      height 150px
      overflow hidden


+below('sm')
  #logos
    clearfix()
    & > div
      img
        max-width 100%
        width 100%
        height auto

  #latest
    .single-offer
      margin-bottom 20px
      .padding
        padding-left 5px
        padding-right 5px
        
  #contacts
    h4
      border-bottom 2px solid rgba(_blue, 0.1)
      padding-bottom 20px
      margin-bottom 20px
